  public void jButton1_ActionPerformed(ActionEvent evt) {
    // TODO hier Quelltext einfügen
    if(numBool == true && num1 == 0){
      num1 = 1;
      jNumberField1.setText(" "+ num1);
    }else if(num1 != 0){
      num1 = (num1 * 10) + 1;
      jNumberField1.setText(" "+ num1);
    }else if(num2 == 0){
      num2 = 1;
      jNumberField1.setText(" "+ num2);
    }else if(num2 != 0){
      num2 = (num2 * 10) + 1;
      jNumberField1.setText(" "+ num2);     
    }
    
  } // end of jButton1_ActionPerformed

