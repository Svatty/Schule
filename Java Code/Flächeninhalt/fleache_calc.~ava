import java.util.Scanner;

public class fleache_calc {
  public static void main(String[] args) {
    Scanner scanner = new Scanner(System.in);
    
    System.out.println("Seite a eingabe");
    double a = scanner.nextDouble();
    
    System.out.println("Seite b eingabe");
    double b = scanner.nextDouble();
    
    double area = a * b;
    System.out.println("Der Flächeninhalt des Rechteck beträgt: "+ area +"cm²");
    
    System.out.println("Radius eingabe");
    double radius = scanner.nextDouble();
    
    double areaKreis = Math.PI*(2*radius);
    System.out.println("Der Umpfang des Kreises beträgt: "+ areaKreis +"cm");
  }
}
